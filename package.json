{
  "name": "@codekraft-studio/vue-record",
  "version": "0.0.3",
  "main": "dist/VueRecord.umd.js",
  "scripts": {
    "prepublishOnly": "npm run build",
    "serve": "vue-cli-service serve --open",
    "build": "vue-cli-service build --target lib --name VueRecord src/components/index.js",
    "build:demo": "vue-cli-service build --dest demo",
    "publish:demo": "git subtree push --prefix demo origin gh-pages",
    "lint": "vue-cli-service lint"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "audio-recorder-polyfill": "^0.3.6",
    "startaudiocontext": "^1.2.1",
    "tone": "^13.8.25",
    "vue": "^2.0"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.12.0",
    "@vue/cli-plugin-e2e-cypress": "^3.12.0",
    "@vue/cli-plugin-eslint": "^3.12.0",
    "@vue/cli-plugin-unit-jest": "^3.12.0",
    "@vue/cli-service": "^3.12.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "eslint": "^6.5.1",
    "eslint-plugin-vue": "^5.2.3",
    "lint-staged": "^9.4.2",
    "node-sass": "^4.14.1",
    "sass-loader": "^7.0.0",
    "vue-template-compiler": "^2.6.10"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
